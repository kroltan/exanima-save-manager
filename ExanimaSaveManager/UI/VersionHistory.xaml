<Window x:Name="window" x:Class="ExanimaSaveManager.VersionHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExanimaSaveManager"
        mc:Ignorable="d"
        Title="{Binding Master.CharacterName, ElementName=window, StringFormat=History for \{0\}}" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <local:SaveList />
        <Button x:Name="ApplySelected" Grid.Row="1" Content="Use this Version" Click="ApplySelected_Click" />
    </Grid>
</Window>
